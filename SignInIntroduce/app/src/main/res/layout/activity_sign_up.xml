<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/iv_signUp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_up_name"
        android:text="이름"
        app:layout_constraintTop_toBottomOf="@id/iv_signUp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="32dp"
        />

    <EditText
        android:id="@+id/et_up_name"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="이름을 입력하세요."
        app:layout_constraintTop_toBottomOf="@id/tv_up_name"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tv_up_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_up_name"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        />

    <EditText
        android:id="@+id/et_up_id"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="아이디를 입력하세요."
        app:layout_constraintTop_toBottomOf="@id/tv_up_id"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tv_up_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_up_id"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        />

    <EditText
        android:id="@+id/et_up_password"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요."
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/tv_up_password"
        android:layout_marginTop="8dp"
        />

    <Button
        android:id="@+id/btn_up_signUp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="회원가입"
        app:layout_constraintTop_toBottomOf="@id/et_up_password"
        android:layout_marginTop="24dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>